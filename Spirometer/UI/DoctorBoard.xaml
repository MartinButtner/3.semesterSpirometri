<Window x:Class="Spirometer.UI.DoctorBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Læge Dashboard" Height="300" Width="400" Background="#E1F5FE">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock
                Text="Dashboard"
                FontSize="18"
                FontWeight="Bold"
                Foreground="Black"
                Margin="0,0,0,20"
                TextAlignment="Center" />

        
            <TextBlock
                Text="Klik herunder for at se målinger for patienter"
                FontSize="14"
                Foreground="Black"
                Margin="0,0,0,5"
                TextAlignment="Center" />
            <Button
                Width="200"
                Height="30"
                Background="#FFA500"
                Click="ShowSpirometerData_Click"
                Content="Hent Spirometer Data"
                Foreground="White"
                FontWeight="Bold" />

           
            <TextBlock
                Text="Klik herunder for at se kritiske målinger"
                FontSize="14"
                Foreground="Black"
                Margin="0,20,0,5"
                TextAlignment="Center" />
            <Button
                Width="200"
                Height="30"
                Background="#5A002C"
                Click="ShowCriticalValues_Click"
                Content="Vis Kritiske Målinger"
                Foreground="White"
                FontWeight="Bold" />

        </StackPanel>
    </Grid>
</Window>