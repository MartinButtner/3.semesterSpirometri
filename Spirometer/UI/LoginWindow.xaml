<Window x:Class="Spirometer.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="270"
        Width="320"
        Background="#E1F5FE" 
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <StackPanel>
           
            <TextBlock
                Text="Login"
                FontWeight="Bold"
                FontSize="18"
                Foreground="Black"
                HorizontalAlignment="Center"
                Margin="0,0,0,15" />

         
            <TextBlock Text="Brugernavn:" FontSize="14" Foreground="#455A64" />
            <TextBox
                x:Name="UsernameTextBox"
                Margin="0,0,0,10"
                Padding="5"
                Background="WhiteSmoke" />

            <TextBlock Text="Adgangskode:" FontSize="14" Foreground="#455A64" />
            <PasswordBox
                x:Name="PasswordBox"
                Margin="0,0,0,15"
                Padding="5"
                Background="WhiteSmoke" />

          
            <Button
                Content="Login"
                Click="Login_Click"
                Width="100"
                Background="#0288D1" 
                Foreground="White"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Padding="5" />
        </StackPanel>
    </Grid>
</Window>