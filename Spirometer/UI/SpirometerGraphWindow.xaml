<Window
    x:Class="Spirometer.UI.SpirometerGraphWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    Title="Spirometer Data Graphs"
    Width="1000"
    Height="800"
    Background="#E1F5FE">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Text="Spirometer Data Graphs"
            FontSize="24"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Margin="0,0,0,20" />

        
        <TextBlock
            Text="FEV1/FVC Ratio"
            FontSize="18"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Margin="0,10,0,5"
            Grid.Row="1" />

        
        <lvc:CartesianChart
            x:Name="RatioChart"
            Grid.Row="2"
            Margin="10"
            VerticalAlignment="Stretch">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Dato" Labels="{Binding RatioDates}" Foreground="Black" FontSize="14"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Ratio (%)" LabelFormatter="{Binding RatioLabelFormatter}" Foreground="Black" FontSize="14"/>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>

       
        <TextBlock
            Text="FEV1 (L)"
            FontSize="18"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Margin="0,10,0,5"
            Grid.Row="3" />

       
        <lvc:CartesianChart
            x:Name="FEV1Chart"
            Grid.Row="4"
            Margin="10"
            VerticalAlignment="Stretch">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Dato" Labels="{Binding Dates}" Foreground="Black" FontSize="14"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="FEV1 (L)" LabelFormatter="{Binding ValueLabelFormatter}" Foreground="Black" FontSize="14"/>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>

       
        <TextBlock
            Text="FVC (L)"
            FontSize="18"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Margin="0,10,0,5"
            Grid.Row="5" />

        
        <lvc:CartesianChart
            x:Name="FVCChart"
            Grid.Row="6"
            Margin="10"
            VerticalAlignment="Stretch">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Dato" Labels="{Binding Dates}" Foreground="Black" FontSize="14"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="FVC (L)" LabelFormatter="{Binding ValueLabelFormatter}" Foreground="Black" FontSize="14"/>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
    </Grid>
</Window>
