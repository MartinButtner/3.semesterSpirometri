<Window
    x:Class="Spirometer.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Spirometer Application"
    WindowState="Maximized"
    Background="#E1F5FE">

    <Grid>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="604" Height="400">

            
            <TextBlock
                Text="Velkommen til Lægehuset"
                FontSize="28"
                FontWeight="Bold"
                Foreground="#007ACC"
                TextAlignment="Center"
                Margin="0,0,0,10" />

           
            <TextBlock
                Text="Tryk på knappen herunder for at starte din lungefunktionsundersøgelse"
                FontSize="18"
                FontStyle="Italic"
                Foreground="DarkSlateGray"
                TextAlignment="Center"
                Margin="0,0,0,20" />

           
            <Button
                Width="350"
                Height="50"
                Background="#007ACC"
                Click="OpenPatientRegistration_Click"
                Content="Start Lungefunktionsundersøgelse"
                Foreground="White"
                FontSize="18"
                FontWeight="Bold"
                Margin="0,0,0,20"
                ToolTip="Klik her for at begynde undersøgelsen" />

            
            <TextBlock
                Text="Har du spørgsmål? Henvend dig venligst i receptionen."
                FontSize="14"
                Foreground="Gray"
                TextAlignment="Center"
                Margin="0,20,0,0" />
        </StackPanel>

       
        <Button
            Width="120"
            Height="30"
            Background="Gray"
            Click="OpenDoctorLogin_Click"
            Content="Admin Login"
            Foreground="White"
            FontSize="14"
            FontWeight="Bold"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Margin="20"
            ToolTip="Klik her for at logge ind som administrator" />
    </Grid>
</Window>
